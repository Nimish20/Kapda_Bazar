<%= render "sellers/shared/error_messages", resource: resource %>
<div class="container bg-light mt-10" >
  <center><h2>Forgot your password?</h2></center>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "btn btn-success mb-3" %>
    </div>
  <% end %>

  <%= render "sellers/shared/links" %>
</div>
