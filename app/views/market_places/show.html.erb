<% if current_customer == nil %>
  <nav class="navbar navbar-dark bg-dark">
    <hr><%= link_to 'Home', market_places_path, method: :get, class: "navbar-brand" %><hr>
    <%= link_to 'Log in', new_customer_session_path, class: "navbar-brand" %><hr>
    <%= link_to 'Sign Up', new_customer_registration_path, method: :get, class: "navbar-brand" %><hr>
  </nav>
<% end %>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
        <div class="col-4">
          <center>
            <a href="/market_places/<%=product.id%>/product"><%= image_tag product.image.first.variant(resize_to_limit: [250, 250]) %></a><br>
            <table>
              <tbody>
                <tr>
                  <th scope="row">Name </th>
                  <td><%= product.name %></td>
                </tr>
                <tr>
                  <th scope="row">Size </th>
                  <td><%= product.size %></td>
                </tr>
                <tr>
                  <th scope="row">Color </th>
                  <td><%= product.color %></td>
                </tr>
                <tr>
                  <th scope="row">Price </th>
                  <td><%= product.price %></td>
                </tr>
                <tr>
                  <th scope="row">Rent </th>
                  <td><%= product.rent_cost %></td>
                </tr>
              </tbody>
            </table>
          </center>
        </div>
    <% end %>
  </div>

  <div class="digg_pagination">
  <div class="page-items">
      <%= will_paginate @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>
